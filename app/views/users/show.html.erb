<div class="col-md-8 col-md-offset-2">
	<% if @user%>
		<div class="panel panel-default">
			<div class="panel-body">
				<h1 class="text-center">Information</h1>
				<div class="form-horizontal">
					<div class="form-group">
						<label class="col-md-2 control-label">Name:</label>
						<div class="col-md-10">
							<p class="form-control-static"><%= @user.name %></p>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-2 control-label">Email:</label>
						<div class="col-md-10">
							<p class="form-control-static"><%= @user.email %></p>
						</div>
					</div>
				</div>
				<% if @user.events.any? %>
					<div class="col-md-10 col-md-offset-1">
						<div class="panel panel-info">
							<div class="panel-heading">
								<h4 class="text-center">Favourite Events</h4>
							</div>
							<ul class="list-group">
								<% @user.events.each do |event| %>
									<li class="list-group-item">
										<h5><strong><%= event.venue_name %></strong></h5>
										<h5><%= Time.parse(event.date).strftime("%b %d, %Y") %></h5>
										<p><%= event.artist_names %></p>
										<%= button_to "Remove", event_path(event.id), method: :delete, class: "btn btn-danger btn-xs btn-block" %>
									</li>
								<% end %>
							</ul>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	<% else %>
		<p>User not found!</p>
	<% end %>
</div>