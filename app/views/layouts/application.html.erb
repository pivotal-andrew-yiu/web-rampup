<!DOCTYPE html>
<html>
<head>
	<title>JamBase App</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<% flash.each do |key, value| %>
  		<div class="<%= flash_class(key) %> col-md-8 col-md-offset-2">
  			<%= value %>
  		</div>
	<% end %>

	<div class="container-fluid">
		<div class="row-fuild">

			<% if signed_in? %>
				<div class="col-md-8">
					<%= yield %>
				</div>
				<div class="col-md-4">
					
				</div>
			<% else %>
				<%= yield %>
			<% end %>
		</div>
	</div

</body>
</html>